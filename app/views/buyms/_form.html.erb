<div class="user-edit">
    <div class="form-group row user-edit-avatar">
      <div class="col-sm-3 col-form-label">
        <img class="form-dummy-mobile" src="https://m.media-amazon.com/images/I/71Xc52m8cEL.jpg">
      </div>
    </div>
  <div class="user-edit-form">
    <%= form_with model: @buym, local: true do |f| %>

      <% if @buym.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @buym.errors.each do |error| %>
              <li style="color: red;"><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group row">
        <%= f.label :title, class: 'col-sm-1' %>
        <div class="col-sm-9">
          <%= f.text_field :title, class: 'form-control mb-2' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :brand, class: 'col-sm-1' %>
        <div class="col-sm-9">
          <%= f.text_field :brand, class: 'form-control mb-2' %>
        </div>
      </div>
       <div class="form-group row">
        <%= f.label :price, class: 'col-sm-1 ' %>
        <div class="col-sm-9">
          <%= f.number_field :price, class: 'form-control mb-2' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :ram, class: 'col-sm-1 ' %>
        <div class="col-sm-9">
          <%= f.text_field :ram, class: 'form-control mb-2' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :storage, class: 'col-sm-1 ' %>
        <div class="col-sm-9">
          <%= f.text_field :storage, class: 'form-control mb-2' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :delivery, class: 'col-sm-1 ' %>
        <div class="col-sm-9">
          <%= f.text_field :delivery, class: 'form-control mb-2' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: 'col-sm-1 ' %>
        <div class="col-sm-9">
          <%= f.text_area :description, class: 'form-control mb-2' %>
        </div>
      </div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="form-group row user-edit-submits">
        <div class="col-sm-9">
          <%= f.submit "Submit", class: 'user-edit-submit mb-2' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
