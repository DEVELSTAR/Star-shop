<div class="buym-show">
	<div class="buy-home-links buym-show-links">
      <%=link_to 'IQBAL TELECOM', root_path, class: "buy-home-link" %>
	</div>
	<div class="buym-show-mobile">
		<div class="show-mobile-img"></div>
		<div class="show-cont">
			<div>
				<div class="mobile-title"><%= @buym.title %></div>
				<div class="show-cont-price"><strong>Rs: </strong><%= @buym.price %>.00</div>
				<div class="show-cont-box">
					<div><strong>Brand: </strong><%= @buym.brand %></div>
					<div><strong>Ram: </strong><%= @buym.ram %></div>
					<div><strong>Storage: </strong><%= @buym.storage %></div>
				</div>
				<div class="show-cont-desc">
					<strong>Description: </strong>
					<p>
					What is Lorem Ipsum?
					Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
					</p>
				</div>
				<div class="show-cont-delivery"><strong>Free</strong> delivery available till <%= @buym.delivery.capitalize %></div>

			</div>
            <div class="show-btns">
            	<% if @buym.user != current_user %>
                  <%= link_to "Add To Cart", buym_path(@buym), class: "show-cart-btn" %>
        	      <%= phone_to "9012626767", "Buy now", class: "show-buy-btn" %>
        	    <% else %>
                  <%= link_to "Edit", edit_buym_path(@buym), class: "show-edit-btn" %>
        	      <%= link_to "Delete", buym_path(@buym), data: {turbo_method: :delete}, class: "show-delete-btn" %>
              <% end %>
            </div>
		</div>
	</div>
</div>

<div class="buym-comments">
	<% if @buym.comments.present? %>
	  <h2>Question</h2>
	  <%= render @buym.comments %>
  <% end %>
  
  <h2>Make a deal</h2>
  <%= render 'comments/form' %>
</div>